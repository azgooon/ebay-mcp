{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2022"],
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"build",
		"docs",
		"src/types/ebay/sell/marketing-and-promotions/marketing-response-types.ts",
		"src/types/ebay/sell/marketing-and-promotions/marketing-api-types.ts",
		"src/types/ebay/sell/order-management/dispute-types.ts",
		"src/api/marketing-and-promotions/marketing.ts"
	]
}
