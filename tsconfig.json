{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "paths": { "@/*": ["./src/*"] },
    "baseUrl": "."
  },
	"include": ["src/**/*", "src/scripts/auto-setup.ts", "src/scripts/interactive-setup.ts", "src/scripts/test-endpoints.ts"],
	"exclude": [
		"node_modules",
		"build",
		"docs",
		"tests",
		"eslint.config.js",
		"vitest.config.ts",
		"src/scripts/test-endpoints.ts"
	]
}
